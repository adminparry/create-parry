.demo-map {
  width: 100%;
  height: 500rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.control-panel {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
  margin-top: 20rpx;
}

.control-btn {
  flex: 1;
  margin: 0 !important;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-text {
  font-size: 28rpx;
}

.info-panel {
  background: #fff;
  border-radius: 8rpx;
  padding: 20rpx;
}

.info-item {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.info-label {
  color: #666;
  font-size: 28rpx;
  width: 160rpx;
}

.info-value {
  color: #333;
  font-size: 28rpx;
  font-weight: 500;
}

.search-box {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.search-input {
  flex: 1;
  height: 80rpx;
  background: #fff;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}

.search-btn {
  width: 160rpx !important;
  height: 80rpx;
  margin: 0 !important;
  display: flex;
  align-items: center;
  justify-content: center;
}

.search-results {
  background: #fff;
  border-radius: 8rpx;
  max-height: 400rpx;
  overflow-y: auto;
}

.result-item {
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.result-item:last-child {
  border-bottom: none;
}

.result-item:active {
  background: #f5f5f5;
}

.result-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
  display: block;
}

.result-address {
  font-size: 24rpx;
  color: #999;
  display: block;
} 